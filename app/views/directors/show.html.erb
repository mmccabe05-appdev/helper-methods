<div>
  <div>
  <h1>Director: <%= @director.name %> details</h1>
  </div>
  <div>
  <%= link_to "Main page", directors_path %>
  </div>
  <div><%= link_to "Edit director", edit_director_path(@director.id) %></div>
  <div>
  <%= link_to "Delete director", director_path(@director), method: :delete %>
  </div>
<dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @director.name %>
      </dd>

      <dt>
          Date of birth
      </dt>
      <dd>
        <%= @director.dob %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
